<div class="container">
 <div class = "row">
  <div class = "col-xs-3">
   <%= render 'books/list', user: @user, book: @book %>
  </div>
   <div class = "col-xs-9">
    <table class = "table">
     <h2>Users</h2>
      <thead>
       <th>image</th>
       <th>name</th>
      </thead>
      
      <tbody>
       <% @users.each do |user| %>
        <tr>
         <td><%= attachment_image_tag user, :profile_image, :fill,60, 60, fallback: "no_image.jpg" %></td>
         <td><%= user.name %></td>
         <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
       </tbody>
      </table>
  </div>
 </div>
</div>
