<!DOCTIPE html>
<html>
     <% flash.each do |message_type, message| %>
      <%= message %>
      <% end %>
  <body>
    <p id="notice"></p>
    <h1>Books</h1>
    
    <table>
      <thead>
        <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
        <div class="input-group my-3">
            <label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "w-100" %>
            </label>
          </div>
      </tr>
      <% end %>
  </tbody>
</table>