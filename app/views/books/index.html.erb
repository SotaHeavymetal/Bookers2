<!DOCTIPE html>
<html>
     <% flash.each do |message_type, message| %>
      <%= message %>
      <% end %>
  <body>
    <p id="notice"></p>
    <h1>Books</h1>
    
    <table>
      <thead>
       
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>

  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><div class="card w-75 mx-auto mt-4 shadow-lg">
    <%= attachment_image_tag @book, :image, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
        <div class="input-group my-3">
            <!--label>-->
            <!--<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "w-100" %>-->
            <!--</label-->
          </div>
      </tr>
      <% end %>
  </tbody>
</table>