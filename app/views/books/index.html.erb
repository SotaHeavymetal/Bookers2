<% flash.each do |message_type, message| %>
 <%= message %>
 <% end %>
  <div class="container">
   <div class = "row">
    <div class = "col-xs-3">
    <%= render 'books/list', user: @user, book: @book %>
    </div>
     <div class = "col-xs-9">
     <body>
      <h1>Books</h1>
       <table class = "table">
        <thead>
         <th>Title</th>
         <th>Opinion</th>
    <!--<th colspan="3"></th>-->
        </thead>
     <tbody>
      <% @books.each do |book| %>
       <tr>
        <td>
         <%= link_to user_path(book.user) do %>
          <div>
          <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
      <% end %>
          </div>
        </td>
         <td><%= link_to book.title, book_path(book) %></td>
         <td><%= book.body %></td>
       <% end %>
       </tr>
    </tbody>
   </table>
   </div>
  </div>
 </div> 