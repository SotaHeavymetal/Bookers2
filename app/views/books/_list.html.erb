<h2>User info</h2>
 <%=attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image_user.jpeg"%>
<table class = "table">
    <tr>
     <th>Name</th>
     <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
     <th><%= user.introduction %></th>
    </tr>
    <tr>
     <th><%= link_to "Edit", edit_user_path(current_user) %></th>
    </tr>
</table>

